@model IEnumerable<Northwind.Core.Category>
@{
    ViewData["Title"] = "Categories";
}
<!DOCTYPE html>

<html>
<head>
    <title>Category</title>
</head>
<body>
    <div style="display: flex; flex-flow: wrap; justify-content: center">
        @foreach (var category in Model)
        {
        <div style="margin: 2rem">
            <div class="card" style="width: 18rem;">
                @if (category.Picture != null)
                {
                    var categoryPicture = category.Picture.ToArray().Take(category.Picture.ToArray().Length - 77).ToArray();
                    var base64 = Convert.ToBase64String(categoryPicture);
                    var userImage = String.Format("data:image/bmp;base64,{0}", base64);
                    <img src="@userImage" alt="User Image" style="height: 300px">
                }
                <div class="card-body">
                    <h5 class="card-title">@category.CategoryName</h5>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        }
    </div>
</body>
</html>