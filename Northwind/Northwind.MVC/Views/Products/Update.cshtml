@model Northwind.MVC.Model.ProductListViewModel
@{
    ViewData["Title"] = "ProductsUpdate";
}
@foreach (var product in Model.Products)
{
<form method="post" asp-action="Update" asp-controller="Products" asp-route-id="@product.ProductId">
    <div class="container" style="display: flex; flex-flow: wrap; justify-content: center">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">ProductId</label>
                    <input type="number" name="ProductId" class="form-control is-valid" value="@product.ProductId" required/>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label">ProductName</label>
                    <input type="text" name="ProductName" class="form-control is-valid" value="@product.ProductName" required/>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label">SupplierName</label>
                    <select name="SupplierId" class="form-control">
                        @foreach (var supplier in Model.Suppliers)
                        {
                            <option value="@supplier.SupplierId">@supplier.CompanyName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">CategoryName</label>
                    <select name="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.CategoryId">@category.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="QuantityPerUnit" class="control-label">QuantityPerUnit</label>
                    <input class="form-control is-valid" type="text" name="QuantityPerUnit" value="@product.QuantityPerUnit" required/>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="UnitPrice" class="control-label">UnitPrice</label>
                    <input type="number" name="UnitPrice" class="form-control" value="@product.UnitPrice" />
                </div>
                <div class="form-group">
                    <label asp-for="UnitsInStock" class="control-label">UnitsInStock</label>
                    <input type="number" name="UnitsInStock" class="form-control" value="@product.UnitsInStock" />
                </div>
                <div class="form-group">
                    <label asp-for="UnitsOnOrder" class="control-label">UnitsOnOrder</label>
                    <input type="number" name="UnitsOnOrder" class="form-control" value="@product.UnitsOnOrder" />
                </div>
                <div class="form-group">
                    <label asp-for="ReorderLevel" class="control-label">ReorderLevel</label>
                    <input type="number" name="ReorderLevel" class="form-control" value="@product.ReorderLevel" />
                </div>
                <div class="form-group">
                    <label asp-for="Discontinued" class="control-label">Discontinued</label>
                    <input type="text" name="Discontinued" class="form-control" value="@product.Discontinued.ToString()" />
                    <span asp-validation-for="Discontinued"></span>
                </div>
            </div>
        </div>        
    </div>
    <div class="row" style="display: flex; flex-flow: wrap; justify-content: center">        
        <div class="form-group">
            <input class="btn btn-dark" type="submit" value="Submit" />
        </div>       
    </div>
</form>
}
